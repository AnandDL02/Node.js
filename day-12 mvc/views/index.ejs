<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    
    <form action="/insert" enctype="multipart/form-data" method="post">
        <input type="text" name="name" placeholder="name">
        <input type="text" name="subject" placeholder="subject">
        <select name="city" id="">
            <option value="" hidden>Select city</option>
            <option value="Surat">Surat</option>
            <option value="Rajkot">Rajkot</option>
            <option value="Ahemdabad">Ahemdabad</option>
            <option value="Vapi">Vapi</option>
        </select> 
        <label for="">male</label>
        <input type="radio" name="gender" value="male">
        <label for="">Female</label>
        <input type="radio" name="gender" value="female">
        <br>
        <label for="">Swimming</label>
        <input type="checkbox" name="hobby" value="cricket">
        <label for="">Reading</label>
        <input type="checkbox" name="hobby" value="game">
        <label for="">Writting</label>
        <input type="checkbox" name="hobby" value="dance">
        <input type="file" name="image">
        <button type="submit">Add Data</button>
    </form>
    <table border="1" width="50%">
        <thead>
            <tr>
                <th>name</th>
                <th>subject</th>
                <th>city</th>
                <th>gender</th>
                <th>hobby</th>
                <th>image</th>
                <th>action</th>
            </tr>
        </thead>
        <tbody>
          <% data.map((e,i)=>{ %>
            <tr>
                <td><%= e.name %></td>
                <td><%= e.subject %></td>
                <td><%= e.city %></td>
                <td><%= e.gender %></td>
                <td><%= e.hobby %></td>
                <td><img src="<%= e.image%>" width="300px" alt=""></td>
               <td><a href="/edit?id=<%=e.id%>"><button>edit</button></a></td>
               <td><a href="/delete?id=<%=e.id%>"><button>Delete</button></a></td>
            </tr>
          <% }) %>
        </tbody>
    </table>
</body>
</html>